{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "importHelpers": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "outDir": "dist",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ]
}